{% extends "base.html" %}
{% block sheets %}<link rel="stylesheet" type="text/css" href="{{MEDIA_URL}}/css/forms.css" /> {% endblock %}
{% block title %}EDC | Thank you! {% endblock %}

<!--menu block-->
{% block menu %}
{% include "includes/menu.html" %}
{% endblock %}

<!--content block-->
{% block content %}
	<div id="main_img"><img src="{{MEDIA_URL}}/images/home/home.jpg" /></div>
	
	<div id="content">
		<div id="thanks" style="width:1000px;">		
			<span class="heading"><span class="heading_in">Thank you</span></span>
				<div id="thanks_in" class="content_in">
					<span class="content_in_span">
						Congrats <strong>{{name}}</strong>,<br />We have saved your data on our systems and a confirmation mail has been sent to the email address you entered : <strong> {{email}}.</strong> <br />You <strong>must confirm</strong> to be able to login to the EDC portal.</span>		
				</div>		
		</div>			
	</div>
{% endblock %}

