{% extends "base.html" %}
{% block sheets %}<link rel="stylesheet" type="text/css" href="{{MEDIA_URL}}/css/homepage.css" /> {% endblock %}
{% block title %} {{event.get_title}} {%endblock %}

<!--menu block-->
{% block menu %}
{% include "includes/events_menu.html" %}
{% endblock %}

{%block facebook%}
{%endblock%}

<!--content block-->
{% block content %}
	<div id="main_img">
		{%if event.banner %}
			<img src="{{MEDIA_URL}}/{{event.banner}}" />
		{% else %}	
			<img src="{{MEDIA_URL}}/images/home/home.jpg" />
		{%endif%}		
	</div>
	
	<div id="content">
		<div style="width:1000px;">
			<span class="heading"><span class="heading_in">Incentives</span></span>
			<div class="content_in">
				<span class="content_in_span">	
				<ol>
				{%autoescape off%}
					{%for incentive in incentives%}
						<li>
						{{incentive.details}}
						{%if not incentive.finalised%}
							<br /><i style="color:red">(at judges' discretion)</i>
						{%endif%}
						{%if not forloop.last%}<hr class="content_ruler">{%endif%}
						</li>
					{%endfor%}
				{%endautoescape%}
				</ol>			
				</span>
			</div>
		</div>
	</div>
{% endblock %}

