{% extends "base.html" %}
{% block sheets %}<link rel="stylesheet" type="text/css" href="{{MEDIA_URL}}/css/homepage.css" /> {% endblock %}
{% block title %} {{event.get_title}} {%endblock %}

<!--menu block-->
{% block menu %}
{% include "includes/events_menu.html" %}
{% endblock %}

{%block facebook%}
{%endblock%}

<!--content block-->
{% block content %}
	<div id="main_img">
		{%if event.banner %}
			<img src="{{MEDIA_URL}}/{{event.banner}}" />
		{% else %}	
			<img src="{{MEDIA_URL}}/images/home/home.jpg" />
		{%endif%}		
	</div>
	
	<div id="content">
		<div style="width:1000px;">
			<span class="heading"><span class="heading_in">Rules & Eligibilty</span></span>
			<div class="content_in">
				<span class="content_in_span">	
				{%autoescape off%}
					{% if event.rules %}
						{{event.rules}}
					{%else%}
						Rules and Eligibility criteria for this event have not been uploaded yet.
					{%endif%}
				{%endautoescape%}
				</ol>			
				</span>
			</div>
		</div>
	</div>
{% endblock %}

