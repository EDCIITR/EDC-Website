body
{
	font-family:"Arial";
	font-size:14px;
	color:black;
}

a:link, a:visited
{
	text-decoration:none;	
	color:black;
}

a:hover
{
	text-decoration:underline;
}


img
{
	border:0px;
}

#wrapper
{	
	width:1024px;
	margin-left:10%;
	text-align:center;
}

/*Header*/
#header
{
	height:86px;
}

#header img
{
	float:left;
}

#header span
{
	float:right;
	margin-top:10px;
}

/*Menu*/
#menu
{
	clear:both;	
	margin-top:10px;	
	width:100%;
	height:30px;
	background-color:#e6e6e6;
}

#menu a.active
{
	background-color:#ffcc00;
}

#menu ul
{
	list-style-type:none;	
	margin:0px;
	padding:0px;
}
	
#menu li
{
	float: left;		
	display: inline;
}

#menu a:link, #menu a:visited
{
	display:block;
	text-decoration:none;
	text-align:center;
	height:24px;
	padding-top:6px;	
	padding-right:18px;
	padding-left:15px;
	font-weight:bold;
}

#menu a:hover
{
	background-color:#ffcc00;	
}


/*Footer*/
#footer hr
{	
	border:0px;	
	height:5px;
	background-color:#e6e6e6; 
}

#footer span
{
	color:#857c78;
	font-size:12px;
}


/* main image */
#main_img
{
	margin-top:4px;

}
