body
{
	font-family:"Arial";
	font-size:12px;
	color:black;
	background-color:#b2b2b2;
	margin:0px 0px 0px 0px;
}

h1
{
	font-size:14px;
}

a.std_link:link, a.std_link:visited
{
	color:blue;
}

a.std_link:hover
{
	text-decoration:underline;
}

a:link, a:visited
{
	text-decoration:none;	
	color:black;
}

a:hover
{
	text-decoration:underline;
}

ul
{
	list-style-type:none;	
	margin:0px;
	padding:0px;
}

img
{
	border:0px;
}

.heading
{
	background-color:#ffcc00;
	text-align:left;
	font-size:14px;
	padding:8px 6px 8px 0px;
	font-weight:bold;
	float:left;
	width:100%;
}


span.heading_in
{
	margin-left:10px;
}

#fb
{
	border:none;
	margin-top:15px;
	float:left; 
	overflow:hidden; 
	width:300px; 
	height:80px;
}

.outer
{
	float:left;
	margin-left:15px;
	padding:0px 10px 10px 0px;
	width:400px;
}

a.glow:hover
{
	background-color:#ffcc00;
	text-decoration:none;
}


.long_link
{
	display:block;
	background-color:#e6e6e6;
	margin-top:5px;
}

.long_link a
{
	display:block;	
	padding: 10px 0px 0px 10px;
	width: 100%;
	height: 70px;
}

.long_link a:hover
{
	background-color: #ffcc00;
	text-decoration:none;
}

.long_link span
{
	display:block;	
	margin-top:5px;
}

.long_link p
{
	margin:5px 0px 0px 0px;
}

#content
{
	width:100%;
	overflow:auto; /*Solution to the float issue */
	margin-top:5px;
}

.content_in
{
	text-align:left;
	float:left;
	display:block;	
	border-style:solid;
	border-color:#e6e6e6; 
	/*height:100%;*/
	width:inherit;
}

span.content_in_span
{
	float:left;
	display:block;
	text-align:justify;	
	padding:5px;
	margin:5px;
}

hr.content_ruler
{
	border:none 0;
	border-top:1px dashed #d6d6d6;
	height:1px;
}

.session
{
	font-size:12px;
}
.session a
{
	color:blue;
}


#wrapper
{	
	width:1024px;
	margin-left:10%;
	text-align:center;
	background-color:white;
	padding:10px 10px 10px 10px;
	overflow:auto;
}

/*Header*/
#header
{
	height:86px;
}

#header img
{
	float:left;
}

#header span
{
	display:block;
	text-align:right;	
	float:right;
	margin-top:10px;
}

/*Menu*/
#menu
{
	clear:both;	
	margin-top:10px;	
	width:100%;
	height:30px;
	background-color:#e6e6e6;
}



#menu a.active
{
	background-color:#ffcc00;
}

#menu ul
{
	list-style-type:none;	
	margin:0px;
	padding:0px;
}
	
#menu li
{
	float: left;		
	display: inline;
}

#menu a:link, #menu a:visited
{
	display:block;
	text-decoration:none;
	text-align:center;
	height:24px;
	padding-top:6px;	
	padding-right:18px;
	padding-left:15px;
	font-weight:bold;
}

#menu a:hover
{
	background-color:#ffcc00;	
}


/*Footer*/
#footer
{
	margin-top:5px;
}
#footer hr
{	
	border:0px;	
	height:5px;
	background-color:#e6e6e6; 
}

#footer span
{
	color:#857c78;
	font-size:12px;
}


/* main image */
#main_img
{
	margin-top:4px;
}


